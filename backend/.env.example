# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Python Environment
PYTHON_VENV_PATH=./venv

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_APPLICATION_CREDENTIALS=./config/firebase-credentials.json

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-auth
WHATSAPP_RETRY_INTERVAL=5000
MAX_CONCURRENT_MESSAGES=5
MESSAGE_DELAY_MS=1000
WHATSAPP_CLIENT_ID=client-one

# Security
JWT_SECRET=your-secret-key-here
CORS_ORIGIN=http://localhost:3000,http://localhost:5000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36 